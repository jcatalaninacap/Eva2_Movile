<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myfirebase">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.IoTApp">

        <!-- Splash Screen con android:exported -->
        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheme"
            android:exported="true"> <!-- Añade android:exported aquí -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Otras actividades -->
        <activity android:name=".LoginActivity" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".PairDeviceActivity" />
        <activity android:name=".DeleteAccountActivity" />
        <activity android:name=".DeviceActivity"/>
        <activity android:name=".DeviceLogsActivity" />

    </application>

</manifest>
