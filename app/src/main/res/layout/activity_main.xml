<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Botón para ir a PairDeviceActivity -->
    <Button
        android:id="@+id/btnPairDevice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Emparejar Dispositivo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="16dp" />

    <!-- Botón para ir a DeleteAccountActivity -->
    <Button
        android:id="@+id/btnDeleteAccount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Eliminar Cuenta"
        app:layout_constraintTop_toBottomOf="@id/btnPairDevice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp" />

    <!-- Botón para ver los logs de acciones del dispositivo -->
    <Button
        android:id="@+id/btnDeviceLogs"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ver Acciones del Dispositivo"
        app:layout_constraintTop_toBottomOf="@id/btnDeleteAccount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp" />

    <!-- Botón Buscar para traer a los usuarios disponibles -->
    <Button
        android:id="@+id/btnDeviceBuscar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Buscar Usuarios"
        app:layout_constraintTop_toBottomOf="@id/btnDeviceLogs"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp" />

    <!-- Botón de Cerrar Sesión -->
    <Button
        android:id="@+id/btn_logout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Cerrar Sesión"
        app:layout_constraintTop_toBottomOf="@id/btnDeviceBuscar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
