<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:columnCount="2"
    android:rowCount="3"
    android:orientation="horizontal">

    <!-- Primera fila: Título Acción -->
    <TextView
        android:id="@+id/tvAccionLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Acción:"
        android:layout_row="0"
        android:layout_column="0"
        android:paddingEnd="8dp"
        android:gravity="end" />

    <!-- Primera fila: Valor Acción -->
    <TextView
        android:id="@+id/tvAccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="1"
        android:text="Acción" />

    <!-- Segunda fila: Título Fecha -->
    <TextView
        android:id="@+id/tvFechaLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha:"
        android:layout_row="1"
        android:layout_column="0"
        android:paddingEnd="8dp"
        android:gravity="end" />

    <!-- Segunda fila: Valor Fecha -->
    <TextView
        android:id="@+id/tvFecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="1"
        android:text="Fecha" />

    <!-- Tercera fila: Título Mensaje -->
    <TextView
        android:id="@+id/tvMensajeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mensaje:"
        android:layout_row="2"
        android:layout_column="0"
        android:paddingEnd="8dp"
        android:gravity="end" />

    <!-- Tercera fila: Valor Mensaje -->
    <TextView
        android:id="@+id/tvMensaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="1"
        android:text="Mensaje" />

</GridLayout>
